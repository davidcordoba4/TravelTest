@{
    ViewData["Title"] = "Administración Libros";
}
@model WebTravelTest.Entities.Models.Editoriales
<div>
    <br /><br />
    <h4>Crear Editorial</h4>
    <p>
        @Html.ActionLink("Regresar", "Index", "Editoriales")
    </p>
    @using (Html.BeginForm("CreateSubmit", "Editoriales", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-8">
                <div class="form-group col-md-12">
                    <div style="font-size:16px;color: #555;text-align: left" class="control-label DivBottom col-md-6">@Html.Label("Nombre") <i class="text-danger glyphicon-asterisk"></i></div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.Nombre, new
                        {
                            id = "Nombre",
                            maxlength = "45",
                            @class = "form-control",
                            @title = "",
                            @style = "font-weight: normal !important",
                            @autocomplete = "off",
                       oninput = "javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                        })
                        <medium>@Html.ValidationMessageFor(m => m.Nombre, string.Empty, new { @class = "text-danger" })</medium>
                    </div>
                </div>
                <div class="form-group col-md-12" style="padding-top: 30px; margin-top: 30px ">
                    <div style="font-size: 16px; color: #555; text-align: left" class="control-label DivBottom col-md-6">@Html.Label("Sede") <i class="text-danger glyphicon-asterisk"></i></div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.Sede, new
                        {
                            id = "Sede",
                            maxlength = "45",
                            @class = "form-control",
                            @title = "",
                            @style = "font-weight: normal !important",
                            @autocomplete = "off",
                       oninput = "javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                        })
                        <medium>@Html.ValidationMessageFor(m => m.Sede, string.Empty, new { @class = "text-danger" })</medium>
                    </div>
                </div>
                <div class="form-group" style="text-align: left; width: 100%; padding-top: 30px; margin-left: 20px; margin-top: 20px">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </div>
        </div>
        @if (!string.IsNullOrEmpty(@ViewBag.MensajeExito))
        {
            <p class="alert alert-success" id="successMessage">@ViewBag.MensajeExito</p>
        }
    }
</div>
