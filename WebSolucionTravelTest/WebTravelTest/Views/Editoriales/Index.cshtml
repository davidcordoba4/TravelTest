@{
    ViewData["Title"] = "Administración Libros";
}
@model List<WebTravelTest.Entities.Models.Editoriales>
@Html.AntiForgeryToken()
<div class="text-center">
    <br /><br />
          <h4>Editoriales</h4>
    <p>
        @Html.ActionLink("Crear Nuevo Editorial", "Create", "Editoriales")
    </p>
    @Html.ValidationSummary(false, "", new { @class = "text-danger", @style= "text-align: left;" })
    <table style="table-layout: fixed;" width="100%" border="1">
        <tr>
            <td width="35%">
                <h5><b>Nombre</b></h5>
            </td>
            <td width="35%">
                <h5><b>Sede</b></h5>
            </td>
            <td width="30%">
            </td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Nombre 
                </td>
                <td>
                    @item.Sede
                </td>
                <td>
                    <a href="@Url.Action("Delete", "Editoriales", new { id = item.Id })" onclick = "return confirm('Está seguro de eliminar este registro?');">Borrar</a>
                </td>
            </tr>
        }
    </table>
</div>
